@model List<DLForum.Models.Comments.report>
@{
    ViewData["Title"] = "Жалобы пользователей";
}

<h2>Список жалоб</h2>
@if (Model != null && Model.Any())
{
    <div class="list-group">
        @foreach (var report in Model)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center"
                 style="border-radius: 10px; margin-bottom: 10px; border: 1px solid #ccc;">
                <div>
                    <h5 class="mb-1" style="font-weight: 600; color: #c70000;">
                        Жалоба на пользователя: <a href="@Url.Action("users", "profile", new { id = report.owr })">@report.owr</a>
                    </h5>
                    <p class="mb-1" style="font-size: 0.9em;color: var(--text-color);">
                        Причина: @report.reason
                    </p>
                    <p class="mb-1" style="font-size: 0.9em;color: var(--text-color);">
                        Дата: @report.created.ToString("dd.MM.yyyy HH:mm")
                    </p>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center">
        <i class="bi bi-info-circle" style="font-size: 2em; color: var(--text-color);"></i>
        <p class="mt-2" style="color: var(--text-color);">Жалоб пока нет.</p>
    </div>
} 