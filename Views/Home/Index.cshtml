@model List<Topic>  
<!-- Указываем, что модель - это список объектов Topic -->


@{
    ViewData["Title"] = "Главная страница";
}


<div class="d-flex">
    <div class="d-flex">
        @inject IHttpContextAccessor HttpContextAccessor
        @if (HttpContextAccessor.HttpContext.Session.GetString("Email") == null)
        {
            <div class="d-flex justify-content-start align-items-start rounded" style="background-color: white;">
                <strong>
                    <a class="btn btn-light text-lg-center text-center text-white mx-1" style="border-radius: 10px; background-color: #5a4bf1;" asp-area="" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-pencil-square" style="font-size: 18px; margin-right: 5px;"></i>
                        Создать тему
                    </a>
                </strong>
            </div>
        }
        else
        {
            <div class="d-flex justify-content-start align-items-start rounded" style="background-color: white;">
                <strong>
                    <a class="btn btn-light text-lg-center text-center text-white mx-1" style="border-radius: 10px; background-color: #5a4bf1;" asp-area="" asp-controller="Topic" asp-action="Topic">
                        <i class="bi bi-pencil-square" style="font-size: 18px; margin-right: 5px;"></i>
                        Создать тему
                    </a>
                </strong>
            </div>
        }
    </div>
</div>
<h2></h2>
<h2>Список тем форума</h2>




<div class="container mt-4">
    <div class="row">
        @foreach (var topic in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card" style="border-radius: 10px; background-color: #fff; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
                    <div class="card-body">

                        <a href="@Url.Action("Details", "Topic", new { id = topic.Id })" class="card-title-link">
                            <h5 class="card-title text-black">@topic.Title</h5>
                        </a>

                        <style>
                            .card-title-link {
                                text-decoration: none; /* Убираем стандартное подчеркивание для ссылки */
                            }

                            .card-title {
                                position: relative;
                                display: inline-block;
                                font-size: 1.5rem;
                                cursor: pointer;
                            }

                                .card-title::after {
                                    content: '';
                                    position: absolute;
                                    bottom: 0;
                                    left: 0;
                                    width: 0;
                                    height: 2px;
                                    background-color: black;
                                    transition: width 0.3s ease;
                                }

                                .card-title:hover::after {
                                    width: 100%;
                                }
                        </style>

                        <!-- Превью контента -->
                        <p class="card-text text-muted">@topic.Content.Substring(0, Math.Min(100, topic.Content.Length))...</p> 
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">
                                <span><i class="bi bi-eye"></i> @topic.ViewsCount</span>
                                <span><i class="bi bi-heart"></i> @topic.LikesCount</span>
                            </div>
                            <small class="text-muted">Опубликовано @topic.CreatedAt.ToString("HH:mm dd MMM yyyy")</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Нагинация -->
<div class="d-flex justify-content-center mt-4">
    @if (ViewBag.CurrentPage > 1)
    {
        <a href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage - 1 })" class="btn btn-outline-primary mx-1">« Предыдущая</a>
    }
    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a href="@Url.Action("Index", new { pageNumber = ViewBag.CurrentPage + 1 })" class="btn btn-outline-primary mx-1">Следующая »</a>
    }
</div>
