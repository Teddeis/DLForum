@model ErrorViewModel
@{
    ViewData["Title"] = "Ошибка";
}
<link rel="stylesheet" type="text/css" href="/css/error_style.css">
<style>

</style>

<div class="error-container">
    <div class="error-content">
        <div class="error-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
        <h1 class="error-title">Упс! Что-то пошло не так</h1>
        <p class="error-message">@Model.Message</p>
        <div class="error-details">
            @if (Model.ShowRequestId)
            {
                <p>ID запроса: <code>@Model.RequestId</code></p>
            }
        </div>
        <div class="error-actions">
            <a href="/" class="btn btn-primary">
                <i class="bi bi-house-fill"></i> Вернуться на главную
            </a>
            <button onclick="window.location.reload()" class="btn btn-secondary">
                <i class="bi bi-arrow-clockwise"></i> Обновить страницу
            </button>
        </div>
    </div>
</div>
