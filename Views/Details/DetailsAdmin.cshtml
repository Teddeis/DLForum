@model Topic

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
        color: #333;
    }

    nav {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .back-link {
        font-size: 16px;
        color: #007BFF;
        text-decoration: none;
    }

    .search {
        font-size: 16px;
        color: #555;
    }

    .main-content {
        margin-bottom: 20px;
    }

    .title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .description {
        font-size: 16px;
        line-height: 1.5;
        color: #555;
    }

    .answers {
        margin-top: 40px;
    }

    .answers-title {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        font-size: 18px;
    }

    .edit-button {
        padding: 5px 10px;
        font-size: 14px;
        background-color: #f0f0f0;
        border: 1px solid #ddd;
        cursor: pointer;
    }

    .answer-input {
        margin-top: 10px;
    }

    textarea {
        width: 100%;
        height: 80px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-bottom: 10px;
        resize: none;
    }

    .post-answer {
        padding: 10px 20px;
        background-color: #007BFF;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 5px;
    }

        .post-answer:hover {
            background-color: #0056b3;
        }
</style>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <!-- Навигация -->
        <nav>
            <a href="@Url.Action("TopicList", "Topic")" class="back-link">← Назад</a>
        </nav>

        <!-- Заголовок и описание -->
        <div class="main-content">
            <h1 class="title">@Model.Title</h1>
            <p class="description">
                @Model.Content
            </p>
        </div>

        <!-- Ответы и форма добавления -->
        <div class="answers">
            <div class="d-flex justify-content-start align-items-start rounded">
                <!-- Форма для принятия темы -->
                @if (@Model.Status == "false")
                {
                    <form method="post" asp-controller="Topic" asp-action="UpdateStatusToTrue" asp-route-topicId="@Model.Id">
                        <button type="submit" class="btn btn-light text-lg-center text-center text-white mx-1" style="border-radius: 10px; background-color: #2a5c03;">
                            <i style="font-size: 18px; margin-right: 5px;"></i> Принять тему
                        </button>
                    </form>
                }

                <!-- Форма для отмены темы -->
                @if (@Model.Status == "false")
                {
                    <form method="post" asp-controller="Topic" asp-action="UpdateStatusToNone" asp-route-topicId="@Model.Id">
                        <button type="submit" class="btn btn-light text-lg-center text-center text-white mx-1" style="border-radius: 10px; background-color: #e34234;">
                            <i style="font-size: 18px; margin-right: 5px;"></i> Отменить тему
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</body>
